<script>
$listClass = $('.listItem');
$listClass.hide();
$('ul.sagul li').each(function(){
var currentEvent = $(this);
var currentElement = currentEvent.find('ul li');
var pastElement = currentEvent.siblings("li").find("ul li");
currentEvent.click(function(){
currentElement.show();
pastElement.hide();
});

});

